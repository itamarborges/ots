<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_title_city"
        android:name="br.borbi.ots.TitleCityFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="br.borbi.ots.TitleCityFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/detail_date_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_date"/>

    <TextView
        android:id="@+id/detail_humidity_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_humidity"/>

    <TextView
        android:id="@+id/detail_min_temperature_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_humidity"/>
    <TextView
        android:id="@+id/detail_max_temperature_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_humidity"/>
    </LinearLayout>
</LinearLayout>