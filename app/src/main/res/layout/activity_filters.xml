<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    tools:context="br.borbi.ots.FiltersActivity">

    <!--
    Período
    -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/datePeriod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/datePeriod"
            android:id="@+id/textViewDatePeriod"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/textViewDateBeginPeriod"
            android:text="@string/dateFormat"
            android:layout_below="@+id/textViewTitulo"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/calendarDateBegin"
            android:layout_below="@+id/textViewTitulo"
            android:src="@drawable/calendar"
            android:onClick="showCalendar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:id="@+id/textViewTo"
            android:layout_below="@+id/textViewTitulo"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/textViewDateEndPeriod"
            android:text="@string/dateFormat"
            android:layout_below="@+id/textViewTitulo"
            />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/calendarDateEnd"
            android:layout_below="@+id/textViewTitulo"
            android:src="@drawable/calendar"
            android:onClick="showCalendar"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_date_period"
        android:id="@+id/textViewHelpDatePeriod"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/datePeriod"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true" />

    <!-- Distância-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutDistance"
        android:layout_below="@+id/textViewHelpDatePeriod"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/max_distance"
            android:id="@+id/textViewMaxDistance"
            android:layout_below="@+id/textViewHelpDatePeriod"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextMaxDistance"
            android:layout_below="@+id/textViewHelpDatePeriod"
            android:layout_toRightOf="@+id/textViewMaxDistance"
            />

        <RadioGroup
            android:id="@+id/radioGroupDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_below="@id/textViewHelpDatePeriod"
            android:layout_alignEnd="@+id/editTextMaxDistance"
            android:layout_alignRight="@+id/editTextMaxDistance"
            android:orientation="horizontal"
            android:layout_marginTop="12dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kilometers"
                android:id="@+id/radioButtonKm"
                android:layout_centerVertical="true"
                android:layout_below="@id/textViewHelpDatePeriod"
                android:layout_alignRight="@+id/editTextMaxDistance"
                android:layout_alignEnd="@+id/editTextMaxDistance" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miles"
                android:id="@+id/radioButtonMiles"
                android:layout_below="@id/textViewHelpDatePeriod"
                android:layout_alignRight="@+id/radioButtonKm"
                android:layout_alignEnd="@+id/radioButtonKm"  />
        </RadioGroup>

    </LinearLayout>

    <!-- Dias bons -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutSunnyDays"
        android:layout_below="@+id/linearLayoutDistance"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/qty_sunny_days"
            android:id="@+id/textViewQtySunnyDays"
            android:layout_below="@+id/linearLayoutDistance"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextQtySunnyDays"
            android:layout_below="@+id/linearLayoutDistance"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/days"
            android:id="@+id/textViewDays"
            android:layout_below="@+id/linearLayoutDistance"
            />
    </LinearLayout>

    <!-- Considerar apenas dias sem chuva-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutDaysWithoutRains"
        android:layout_below="@+id/linearLayoutSunnyDays"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days_without_rain"
            android:id="@+id/checkBoxDaysWithoutRain"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <!-- Temperatura -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutTemperature"
        android:layout_below="@+id/linearLayoutDaysWithoutRains"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/min_temperature"
            android:id="@+id/textViewMinTemperature"
            android:layout_below="@+id/checkBoxDaysWithoutRain"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextMinTemperature"
            android:layout_below="@+id/checkBoxDaysWithoutRain"
            android:layout_alignTop="@+id/textViewMinTemperature"
            android:layout_alignRight="@+id/textViewMinTemperature"
            android:imeOptions="actionDone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degree_symbol"
            android:id="@+id/textViewSymbolDegrees"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom" />

        <RadioGroup
            android:id="@+id/radioGroupTemperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_below="@+id/checkBoxDaysWithoutRain"
            android:layout_alignEnd="@+id/editTextMinTemperature"
            android:layout_alignRight="@+id/editTextMinTemperature"
            android:orientation="horizontal"
            android:layout_marginTop="12dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                android:id="@+id/radioButtonCelsius"
                android:layout_centerVertical="true"
                android:layout_below="@id/textViewHelpDatePeriod"
                android:layout_alignRight="@+id/editTextMaxDistance"
                android:layout_alignEnd="@+id/editTextMaxDistance" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/farenheit"
                android:id="@+id/radioButtonFarenheit"
                android:layout_below="@id/textViewHelpDatePeriod"
                android:layout_alignRight="@+id/radioButtonCelsius"
                android:layout_alignEnd="@+id/radioButtonCelsius"  />
        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_care"
            android:id="@+id/checkBoxTemperature"
            android:layout_below="@+id/checkBoxDaysWithoutRain"
            android:layout_alignRight="@+id/radioGroupTemperature"
            />
    </LinearLayout>

    <!-- Botao para pesquisar-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/buttonSearch"
        android:layout_above="@id/adView"
        android:layout_alignParentRight="true"
        android:onClick="onSaveButtonClicked"
        android:background="@drawable/button_background"
        android:layout_marginBottom="5dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
