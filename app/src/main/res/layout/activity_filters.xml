<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.borbi.ots.FiltersActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datePeriod"
        android:id="@+id/textViewDatePeriod"
        android:layout_below="@+id/textViewTitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDateBeginPeriod"
        android:text="@string/dateFormat"
        android:layout_below="@+id/textViewTitulo"
        android:layout_toRightOf="@+id/textViewDatePeriod"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarDateBegin"
        android:layout_toRightOf="@+id/textViewDateBeginPeriod"
        android:layout_below="@+id/textViewTitulo"
        android:src="@drawable/calendar"
        android:onClick="showCalendar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        android:id="@+id/textViewTo"
        android:layout_toRightOf="@+id/calendarDateBegin"
        android:layout_below="@+id/textViewTitulo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDateEndPeriod"
        android:text="@string/dateFormat"
        android:layout_below="@+id/textViewTitulo"
        android:layout_toRightOf="@+id/textViewTo"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarDateEnd"
        android:layout_toRightOf="@+id/textViewDateEndPeriod"
        android:layout_below="@+id/textViewTitulo"
        android:src="@drawable/calendar"
        android:onClick="showCalendar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_date_period"
        android:id="@+id/textViewHelpDatePeriod"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textViewDateBeginPeriod"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
