<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    tools:context="br.borbi.ots.FiltersActivity"
    android:background="@color/pure_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/datePeriod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/datePeriod"
            android:id="@+id/textViewDatePeriod"
            android:padding="8dp"
            android:gravity="center"
            android:textAppearance="@style/titleTextView" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="@drawable/border_gray"
                android:layout_marginLeft="5dp"
                android:showDividers="middle"
                android:id="@+id/layoutDateBegin"
                android:onClick="showCalendar">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/textViewDateBeginPeriod"
                    android:text="@string/dateFormat"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="@style/dateTextView" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/calendarDateBegin"
                    android:background="#E0E0E0"
                    android:padding="2dp"
                    android:src="@drawable/calendar"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="@drawable/border_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/layoutDateEnd"
                android:onClick="showCalendar">

            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/textViewDateEndPeriod"
            android:text="@string/dateFormat"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/dateTextView" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/calendarDateEnd"
            android:background="#E0E0E0"
            android:padding="2dp"
            android:src="@drawable/calendar"
            android:nestedScrollingEnabled="false" />
           </LinearLayout>

    </LinearLayout>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_date_period"
        android:id="@+id/textViewHelpDatePeriod"
        android:textAppearance="@style/subtitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/datePeriod" />
    <!-- DistÃ¢ncia-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayoutDistance"
        android:layout_below="@+id/separator">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/max_distance"
            android:id="@+id/textViewMaxDistance"
            android:textStyle="bold"
            android:textAppearance="@style/titleTextView"
            android:gravity="center_vertical|center_horizontal" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextMaxDistance" />

        <RadioGroup
            android:id="@+id/radioGroupDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kilometers"
                android:id="@+id/radioButtonKm"
                android:layout_centerVertical="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miles"
                android:id="@+id/radioButtonMiles" />
        </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <!-- Dias bons -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:id="@+id/linearLayoutSunnyDays"
        android:layout_below="@+id/linearLayoutDistance">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/qty_sunny_days"
            android:id="@+id/textViewQtySunnyDays"
            android:textAppearance="@style/titleTextView"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextQtySunnyDays" />


        <!-- Considerar apenas dias sem chuva-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutDaysWithoutRains">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_without_rain"
                android:id="@+id/checkBoxDaysWithoutRain"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>
    </LinearLayout>


    <!-- Temperatura -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:id="@+id/linearLayoutTemperature"
        android:layout_below="@+id/linearLayoutSunnyDays">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/min_temperature"
            android:id="@+id/textViewMinTemperature"
            android:layout_gravity="center"
            android:padding="10dp"
            android:ems="12"
            android:textAlignment="center"
            android:elegantTextHeight="false"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/titleTextView" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextMinTemperature"
            android:imeOptions="actionDone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degree_symbol"
            android:id="@+id/textViewSymbolDegrees" />

        <RadioGroup
            android:id="@+id/radioGroupTemperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_marginTop="12dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                android:id="@+id/radioButtonCelsius" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/farenheit"
                android:id="@+id/radioButtonFarenheit"  />
        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_care"
            android:id="@+id/checkBoxTemperature" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botao para pesquisar-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/buttonSearch"
        android:layout_above="@id/adView"
        android:layout_alignParentRight="true"
        android:onClick="onSaveButtonClicked"
        android:background="@drawable/button_background"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linearLayoutTemperature" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
