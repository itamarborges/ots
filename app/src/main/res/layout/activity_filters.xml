<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    tools:context="br.borbi.ots.FiltersActivity"
    android:background="@color/pure_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/datePeriod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/datePeriod"
            android:id="@+id/textViewDatePeriod"
            android:gravity="center"
            android:textAppearance="@style/titleTextView"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="@drawable/border_gray"
                android:layout_marginLeft="5dp"
                android:showDividers="middle"
                android:id="@+id/layoutDateBegin"
                android:onClick="showCalendar">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/textViewDateBeginPeriod"
                    android:text="@string/dateFormat"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="@style/dateTextView" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/calendarDateBegin"
                    android:background="#E0E0E0"
                    android:padding="2dp"
                    android:src="@drawable/calendar"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:background="@drawable/border_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/layoutDateEnd"
                android:onClick="showCalendar">

            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/textViewDateEndPeriod"
            android:text="@string/dateFormat"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/dateTextView" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/calendarDateEnd"
            android:background="#E0E0E0"
            android:padding="2dp"
            android:src="@drawable/calendar"
            android:nestedScrollingEnabled="false" />
           </LinearLayout>

    </LinearLayout>


        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_date_period"
        android:id="@+id/textViewHelpDatePeriod"
        android:textAppearance="@style/subtitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

     </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/datePeriod" />
    <!-- DistÃ¢ncia-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutDistance"
        android:layout_below="@+id/separator"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/max_distance"
            android:id="@+id/textViewMaxDistance"
            android:textStyle="bold"
            android:textAppearance="@style/titleTextView"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/border_gray"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="right">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="fill_parent"
                android:layout_gravity="center|bottom"
                android:gravity="bottom">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextMaxDistance"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:text="@string/km"
                android:id="@+id/btnKm"
                android:background="@color/ots_green"
                android:textColor="@color/pure_white" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:text="@string/mi"
                android:id="@+id/btnMi"
                android:background="#E0E0E0" />

            <RadioGroup
            android:id="@+id/radioGroupDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kilometers"
                android:id="@+id/radioButtonKm"
                android:layout_centerVertical="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miles"
                android:id="@+id/radioButtonMiles" />
        </RadioGroup>

        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_distance"
            android:id="@+id/helpTextView"
            android:textAppearance="@style/subtitleTextView"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separator2"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/linearLayoutDistance" />
    <!-- Dias bons -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutSunnyDays"
        android:layout_below="@+id/separator2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/qty_sunny_days"
            android:id="@+id/textViewQtySunnyDays"
            android:textAppearance="@style/titleTextView"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:background="@drawable/border_gray"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="right">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextQtySunnyDays"
            android:background="@null"
            android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days_without_rain"
            android:id="@+id/checkBoxDaysWithoutRain"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/subtitleTextView"
            android:layout_gravity="center" />

        <!-- Considerar apenas dias sem chuva-->
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separator3"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/linearLayoutSunnyDays" />
    <!-- Temperatura -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutTemperature"
        android:layout_below="@+id/separator3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/min_temperature"
            android:id="@+id/textViewMinTemperature"
            android:layout_gravity="center"
            android:ems="12"
            android:textAlignment="center"
            android:elegantTextHeight="false"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/titleTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/border_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:id="@+id/fieldsTemperature"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="fill_parent"
                android:layout_gravity="center|bottom"
                android:gravity="bottom" >

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editTextMinTemperature"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:text="@string/km"
                android:id="@+id/button"
                android:background="@color/ots_green"
                android:textColor="@color/pure_white" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:text="@string/mi"
                android:id="@+id/button2"
                android:background="#E0E0E0" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kilometers"
                    android:id="@+id/radioButton"
                    android:layout_centerVertical="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/miles"
                    android:id="@+id/radioButton2" />
            </RadioGroup>

        </LinearLayout>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/dont_care"
                android:id="@+id/checkBoxTemperature"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                style="@style/subtitleTextView" />

        </LinearLayout>
    </LinearLayout>

    <!-- Botao para pesquisar-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/buttonSearch"
        android:layout_above="@id/adView"
        android:layout_alignParentRight="true"
        android:onClick="onSaveButtonClicked"
        android:background="@drawable/button_background"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linearLayoutTemperature"
        android:layout_marginTop="5dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
