<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/title_fragment_horizontal_margin"
    android:paddingLeft="@dimen/title_fragment_horizontal_margin"
    android:paddingTop="@dimen/title_fragment_vertical_margin"
    >
    <TextView
        android:id="@+id/city_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/city_title"
        android:text="Porto Alegre, RS"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_city_first_tag_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Praia - Neve"
            android:textSize="@dimen/font_size_small"
            android:textColor="#ffffff"
            android:background="@drawable/customborder"
            android:layout_marginRight="@dimen/marginRightTagsCity"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/fragment_city_second_tag_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neve"
            android:textSize="@dimen/font_size_small"
            android:textColor="#ffffff"
            android:background="@drawable/customborder"
            android:layout_marginRight="@dimen/marginRightTagsCity"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/fragment_city_third_tag_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comida"
            android:textSize="@dimen/font_size_small"
            android:textColor="#ffffff"
            android:background="@drawable/customborder"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
