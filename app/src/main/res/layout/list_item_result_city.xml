<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_result_search_city"
    android:background="@drawable/border_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/list_item_date_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/10"
            android:textAppearance="@style/smallTitleTextView"
            android:gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weather_imageview"
            android:gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/ots_sunny_small"
            />

        <TextView
            android:id="@+id/list_item_min_temperature_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="8ºC"
            android:textAppearance="@style/dateTextView"
            />

        <TextView
            android:id="@+id/list_item_max_temperature_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="18ºC"
            android:textAppearance="@style/dateTextView"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_more_horiz_black_24dp"
        android:background="@drawable/background_gray"
        android:id="@+id/img_more_details"/>
</LinearLayout>