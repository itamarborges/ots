<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_result_search_city"
    android:padding="4dp" >

    <TextView
        android:id="@+id/list_item_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_imageview"
        android:layout_below="@+id/list_item_date_textview"
        />

    <TextView
        android:id="@+id/list_item_min_temperature_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_temperature"
        android:layout_below="@+id/weather_imageview"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_min_temperature_textview"
        android:text="@string/more_details"
        android:id="@+id/list_item_details_button" />

</LinearLayout>